server {
        server_name scratch.local;

        location /api {
          proxy_pass http://localhost:3000;
	  proxy_no_cache 1;
 	  add_header Access-Control-Allow-Origin *;
        }

        location /admin/api {
          proxy_pass http://localhost:3001;
	  proxy_no_cache 1;
 	  add_header Access-Control-Allow-Origin *;
        }

        location /admin {
          proxy_pass http://localhost:3001;
          expires 1h;
 	  add_header Access-Control-Allow-Origin *;
        }

        location / {
          proxy_pass http://localhost:3000;
          expires 1w;
 	  add_header Access-Control-Allow-Origin *;
        }
}

